@using Memberships.Areas.Admin.Models
@model IEnumerable<Memberships.Areas.Admin.Models.SubscriptionProductModel>



@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.ProductTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubscriptionTitle)
        </th>
        <th></th>
    </tr>

    @foreach (var subscriptionproduct in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelProduct => subscriptionproduct.ProductTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => subscriptionproduct.SubscriptionTitle)
            </td>

            <td>
                @Html.Partial("_TableButtonsPartial",
                            new SmallButtonModel { ProductId = subscriptionproduct.ProductId, SubscriptionId = subscriptionproduct.SubscriptionId })
            </td>
        </tr>
    }

</table>
